{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./typings",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true
  }
}