{
  "include": [
    "./src/**/*.ts",
    "./ui/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "declaration": false,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true
  }
}